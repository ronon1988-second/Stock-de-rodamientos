
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir lectura de un documento individual de /roles si el usuario está autenticado
    match /roles/{userId} {
      allow read: if request.auth != null;
    }
    
    // Permitir al usuario leer su propio perfil
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para otras colecciones (ajustar según sea necesario)
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // O restringir a roles específicos
    }

    match /sectors/{sectorId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // O restringir a roles específicos
    }
    
    match /sectors/{sectorId}/machines/{machineId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null;
    }

    match /machineAssignments/{assignmentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /usageLog/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
