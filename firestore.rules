
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir lectura de documentos individuales en /roles si el usuario está autenticado
    match /roles/{userId} {
      allow get: if request.auth != null;
    }
    
    // Los usuarios pueden leer y actualizar su propio perfil
    match /users/{userId} {
        allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para el inventario - solo usuarios autenticados pueden leer.
    // La escritura (crear, actualizar, borrar) está restringida por la lógica de la app (roles).
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Se asume que la lógica de roles en la app/server previene escrituras no deseadas
    }

    // Reglas para sectores y máquinas - solo lectura para usuarios autenticados
    match /sectors/{sectorId} {
      allow read: if request.auth != null;
      
      match /machines/{machineId} {
        allow read: if request.auth != null;
      }
    }
    
    // Reglas para asignaciones y logs - lectura para usuarios autenticados.
    // Escritura manejada por la lógica de la app/servidor.
    match /machineAssignments/{assignmentId} {
       allow read, write: if request.auth != null;
    }
    
    match /usageLog/{logId} {
        allow read, write: if request.auth != null;
    }

    // Por defecto, denegar todo lo demás para mayor seguridad.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    